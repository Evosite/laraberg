{
  "compilerOptions": {
    "outDir": "resources/dist/js",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "createElement"
  },
  "include": [
    "./resources/**/*"
  ],
  "exclude": [
    "./public"
  ]
}
